@model List<GenreDto>
@{
    ViewData["Title"] = "Index";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Kategori İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">

                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Kategori Listesi</div>
                    </div>
                    <div class="card-body">

                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">Kategori Adı</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Name</td>
                                        <td><a asp-area="Admin" asp-action="Delete" asp-controller="Genre" asp-route-genreId="@item.GenreID" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a asp-area="Admin" asp-action="Update" asp-controller="Genre" asp-route-genreId="@item.GenreID" class="btn btn-outline-success">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a asp-area="Admin" asp-action="Add" asp-controller="Genre" class="btn btn-outline-primary">Yeni Kategori Ekle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


