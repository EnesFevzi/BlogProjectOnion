@model GenreAddDto
@{
    ViewData["Title"] = "Add";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Kategori İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form asp-action="Add" asp-controller="Genre" asp-area="Admin" method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Kategori Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Title">Başlığı Giriniz</label>
                                <input type="text" class="form-control" asp-for="Name" id="Title">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Kategori Ekle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

