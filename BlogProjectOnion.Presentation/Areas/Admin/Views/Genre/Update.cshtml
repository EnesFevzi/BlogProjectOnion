@model GenreUpdateDto
@{
    ViewData["Title"] = "Update";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Kategori İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form asp-action="Update" asp-controller="Genre" asp-area="Admin" method="post">
                    <div class="card">
                        <input asp-for="GenreID" type="hidden" />
                        <div class="card-header">
                            <div class="card-title">Kategori Güncelleme</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="Name">Başlığı Giriniz</label>
                                <input  type="text" class="form-control" asp-for="Name" id="Title">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Kategori Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

