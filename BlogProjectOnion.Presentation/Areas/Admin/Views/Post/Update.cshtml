@model PostUpdateDto
@{
    ViewData["Title"] = "Update";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Kategori İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form asp-action="Update" asp-controller="Post" asp-area="Admin" method="post" enctype="multipart/form-data">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Post Güncelleme</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Title">Başlığı Giriniz</label>
                                <input type="text" class="form-control" asp-for="Title" id="Title">
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Content" for="defaultFormControlInput" class="form-label">İçerik</label>
                                <textarea asp-for="Content" rows="3" cols="40" type="text" class="form-control mb-3" id="defaultFormControlInput" style="min-height:300px;" placeholder="İçerik" aria-describedby="defaultFormControlHelp"></textarea>
                                <span asp-validation-for="Content" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="GenreId">Kategori</label>
                                <select id="categoryList" class="form-control" asp-for="GenreId" asp-items="@(new SelectList(Model.Genres,"GenreID","Name"))"></select>
                                <span asp-validation-for="GenreId" class="text-danger"></span>

                            </div>
                            <div class="form-group">
                                <label asp-for="Photo" class="form-label">Resim seçiniz</label>
                                <input asp-for="Photo" type="file" accept="image/*" class="form-control mb-3">
                                <span asp-validation-for="Photo" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Post Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

